# ClawTrap Terraform Configuration
# Copy this file to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars to version control

# Required: Your GitHub organization/username and repo name
github_org  = "your-github-username"
github_repo = "clawtrap"

# Optional: AWS region (default: us-east-2)
# aws_region = "us-east-2"

# Optional: Environment name (default: production)
# environment = "production"

# Optional: EC2 instance type (default: t3.micro)
# instance_type = "t3.micro"

# Optional: Enable SSH access (default: false - uses SSM only)
# enable_ssh = true
# ssh_allowed_cidr = "YOUR.IP.ADDRESS/32"

# Optional: EC2 key pair name (only needed if enable_ssh = true)
# key_name = "your-keypair-name"

# Optional: Application ports (defaults shown)
# http_port = 443
# ws_port   = 18789

# Optional: Log retention in days (default: 90)
# log_retention_days = 90
